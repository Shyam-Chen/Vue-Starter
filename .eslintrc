{
  "plugins": [
    "vue",
    "flowtype"
  ],
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "es6": true,
    "jest": true
  },
  "globals": {},
  "extends": [
    "airbnb-base",
    "plugin:vue/recommended",
    "plugin:flowtype/recommended"
  ],
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "parser": "babel-eslint",
    "sourceType": "module"
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack.config.js"
      }
    }
  },
  "rules": {
    // Plugins

    // Possible Errors

    // Best Practices
    "no-param-reassign": ["error", { props: false }],

    // Variables

    // Node.js and CommonJS

    // Stylistic Issues
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "object-curly-newline": ["error", { "consistent": true }]

    // JS.Next
  }
}
